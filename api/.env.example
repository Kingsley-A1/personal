# ==========================================
# KING DAILY - CLOUDFLARE R2 CONFIGURATION
# ==========================================
# Fill in your credentials below

# Cloudflare R2 Settings
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=king-daily-data
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# JWT Secret (generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_minimum_32_characters_long

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ==========================================
# FIREBASE CONFIGURATION (Push Notifications)
# ==========================================
# Get these from Firebase Console > Project Settings > Service Accounts

FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ==========================================
# EMAIL SERVICE (Future: Password Reset)
# ==========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password
# EMAIL_FROM=noreply@kingdaily.app
